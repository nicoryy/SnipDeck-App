{
  "name": "snipdeck",
  "version": "2.0.0",
  "main": "main.js",
  "build": {
    "asar": true,
    "asarUnpack": [
      "**/snippets.json"
    ],
    "appId": "com.nicory.snipdeck",
    "productName": "SnipDeck",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "public/logo.ico",
      "forceCodeSigning": false
    }
  },
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  }
}
